<h2>Projects</h2>
<div class="ui very relaxed link items">
  {{#each model as |project|}}
    <div class="item">
      <div class="image">
        <img src={{project.screenshotURL}}>
      </div>
      <div class="middle aligned content">
        {{#link-to 'project' project.id}}
          <div class="ui header">
            {{project.title}}
          </div>
          <div class="description">
            <p>{{{truncate-string project.text limit=500}}}</p>
          </div>
        {{/link-to}}
      </div>
    </div>
  {{/each}}
</div>
